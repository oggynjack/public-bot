<%- include('layouts/header', { title: title || '404 Not Found' }) %>

<div class="min-h-screen bg-gray-900 flex items-center justify-center px-4">
    <div class="max-w-md w-full bg-gray-800 rounded-lg shadow-lg p-8 text-center">
        <div class="mb-6">
            <div class="mx-auto w-20 h-20 bg-yellow-500 rounded-full flex items-center justify-center mb-4">
                <span class="text-3xl font-bold text-gray-900">404</span>
            </div>
            <h1 class="text-2xl font-bold text-white mb-2">Page Not Found</h1>
            <p class="text-gray-300 mb-6">
                <%= message || 'The page you\'re looking for doesn\'t exist or has been moved.' %>
            </p>
        </div>

        <div class="space-y-3">
            <a href="/" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors inline-block">
                Go Home
            </a>
            <% if (typeof user !== 'undefined' && user) { %>
            <a href="/dashboard" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-lg transition-colors inline-block">
                Go to Dashboard
            </a>
            <% } %>
            <a href="javascript:history.back()" class="w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors inline-block">
                Go Back
            </a>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>
