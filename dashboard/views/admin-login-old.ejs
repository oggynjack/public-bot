<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        discord: {
                            50: '#f0f4ff',
                            100: '#e0e7ff',
                            200: '#c7d2fe',
                            300: '#a5b4fc',
                            400: '#818cf8',
                            500: '#5865f2',
                            600: '#4f46e5',
                            700: '#4338ca',
                            800: '#3730a3',
                            900: '#312e81'
                        },
                        premium: {
                            50: '#fefce8',
                            100: '#fef9c3',
                            200: '#fef08a',
                            300: '#fde047',
                            400: '#facc15',
                            500: '#eab308',
                            600: '#ca8a04',
                            700: '#a16207',
                            800: '#854d0e',
                            900: '#713f12'
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen flex items-center justify-center">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="1"%3E%3Ccircle cx="30" cy="30" r="1.5"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="relative z-10 w-full max-w-md">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="flex items-center justify-center space-x-3 mb-4">
                <i class="fas fa-user-shield text-premium-500 text-4xl"></i>
                <span class="text-3xl font-bold text-white">Admin Login</span>
            </div>
            <p class="text-gray-400">Access the PremiumPlus administration panel</p>
        </div>

        <!-- Login Form -->
        <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700 shadow-2xl">
            <% if (error) { %>
                <div class="mb-6 p-4 bg-red-900 bg-opacity-50 border border-red-700 rounded-lg">
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-exclamation-triangle text-red-400"></i>
                        <span class="text-red-300">
                            <% if (error === 'invalid_credentials') { %>
                                Invalid admin credentials. Please try again.
                            <% } else if (error === 'not_authorized') { %>
                                Your Discord account is not authorized for admin access.
                            <% } else if (error === 'auth_failed') { %>
                                Authentication failed. Please try again.
                            <% } else if (error === 'invalid_request') { %>
                                Invalid authentication request.
                            <% } else { %>
                                An error occurred. Please try again.
                            <% } %>
                        </span>
                    </div>
                </div>
            <% } %>

            <!-- Discord Login Option -->
            <div class="mb-6">
                <a href="/admin/auth/discord" class="w-full bg-discord-500 hover:bg-discord-600 text-white px-6 py-3 rounded-lg font-bold transition-colors duration-200 flex items-center justify-center space-x-2">
                    <i class="fab fa-discord text-xl"></i>
                    <span>Login with Discord (Admin)</span>
                </a>
            </div>

            <!-- Divider -->
            <div class="flex items-center mb-6">
                <div class="flex-1 border-t border-gray-600"></div>
                <span class="px-4 text-gray-400 text-sm">OR</span>
                <div class="flex-1 border-t border-gray-600"></div>
            </div>

            <form method="POST" action="/admin/login" class="space-y-6">
                <!-- Admin Email Field -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
                        <i class="fas fa-envelope mr-2"></i>Admin Email
                    </label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required
                        class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-premium-500 focus:border-transparent text-white placeholder-gray-400"
                        placeholder="Enter your admin email address"
                        value="<%= process.env.MASTER_ADMIN_EMAIL || '' %>"
                    >
                </div>

                <!-- Password Field (Optional) -->
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
                        <i class="fas fa-lock mr-2"></i>Password
                        <span class="text-xs text-gray-400">(Optional - Leave blank for OTP login)</span>
                    </label>
                    <div class="relative">
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-premium-500 focus:border-transparent text-white placeholder-gray-400 pr-12"
                            placeholder="Enter password or leave blank for OTP"
                        >
                        <button 
                            type="button" 
                            onclick="togglePassword()"
                            class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white transition-colors duration-200"
                        >
                            <i id="passwordIcon" class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="bg-blue-900/30 border border-blue-500/30 rounded-lg p-4">
                    <div class="flex items-center text-blue-400 mb-2">
                        <i class="fas fa-info-circle mr-2"></i>
                        <span class="font-medium">Login Options</span>
                    </div>
                    <div class="text-sm text-blue-300 space-y-2">
                        <p><strong>With Password:</strong> Enter your email and password for quick login.</p>
                        <p><strong>With OTP:</strong> Leave password blank to receive a verification code via email.</p>
                        <p><strong>First Time:</strong> You'll be asked to set up a password after OTP verification.</p>
                    </div>
                </div>

                <!-- Login Button -->
                <button 
                    type="submit"
                    class="w-full bg-premium-500 hover:bg-premium-600 text-black px-6 py-3 rounded-lg font-bold transition-colors duration-200 flex items-center justify-center space-x-2"
                >
                    <i class="fas fa-sign-in-alt"></i>
                    <span>Login to Admin Panel</span>
                </button>
            </form>

            <!-- Security Notice -->
            <div class="mt-6 p-4 bg-gray-900 bg-opacity-50 border border-gray-600 rounded-lg">
                <div class="flex items-start space-x-2">
                    <i class="fas fa-shield-alt text-green-400 mt-1"></i>
                    <div class="text-sm text-gray-300">
                        <p class="font-medium text-green-400 mb-1">Security Notice</p>
                        <p>This is a secure admin login. All access attempts are logged and monitored.</p>
                    </div>
                </div>
            </div>

            <!-- Back to Home -->
            <div class="mt-6 text-center">
                <a href="/" class="text-gray-400 hover:text-white transition-colors duration-200 text-sm flex items-center justify-center space-x-2">
                    <i class="fas fa-arrow-left"></i>
                    <span>Back to Homepage</span>
                </a>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordField = document.getElementById('password');
            const passwordIcon = document.getElementById('passwordIcon');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                passwordIcon.classList.remove('fa-eye');
                passwordIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                passwordIcon.classList.remove('fa-eye-slash');
                passwordIcon.classList.add('fa-eye');
            }
        }

        // Auto-focus on admin ID field
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('adminId').focus();
        });
    </script>
</body>
</html>
