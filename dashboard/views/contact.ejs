<%- include('./layouts/header', { title: title }) %>

<div class="min-h-screen bg-gray-900">
  <!-- Navigation -->
  <nav class="bg-gray-800 shadow-lg border-b border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16 items-center">
        <div class="flex items-center space-x-3">
          <i class="fas fa-music text-discord-500 text-2xl"></i>
          <span class="text-xl font-bold">MAVCODE Rhythm</span>
          <span class="px-2 py-1 bg-premium-500 text-black text-xs font-semibold rounded">MUSIC BOT</span>
        </div>
        
        <div class="hidden md:flex items-center space-x-6">
          <a href="/" class="text-gray-300 hover:text-white transition-colors">
            <i class="fas fa-home mr-2"></i>Home
          </a>
          <a href="/dashboard/plans" class="text-gray-300 hover:text-white transition-colors">
            <i class="fas fa-tag mr-2"></i>Plans
          </a>
          <a href="/dashboard/documentation" class="text-gray-300 hover:text-white transition-colors">
            <i class="fas fa-book mr-2"></i>Documentation
          </a>
          <a href="/features" class="text-gray-300 hover:text-white transition-colors">
            <i class="fas fa-star mr-2"></i>Features
          </a>
        </div>
        
        <div class="flex items-center space-x-4">
          <a href="/auth/discord" class="bg-discord-500 hover:bg-discord-600 text-white px-6 py-2 rounded-lg flex items-center space-x-2 transition-colors">
            <i class="fab fa-discord"></i>
            <span>Login with Discord</span>
          </a>
          <a href="/admin/login" class="bg-yellow-400 hover:bg-yellow-500 text-black px-6 py-2 rounded-lg font-bold border-2 border-yellow-600 flex items-center space-x-2 transition-colors">
            <i class="fas fa-user-shield"></i>
            <span>Admin Login</span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-800 to-gray-900 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Get in <span class="text-discord-400">Touch</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Have questions, suggestions, or need help? We'd love to hear from you!
      </p>
    </div>
  </section>

  <!-- Contact Form & Info -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Contact Form -->
        <div class="bg-gray-800 p-8 rounded-2xl border border-gray-700">
          <h2 class="text-2xl font-bold text-white mb-6">Send us a Message</h2>
          <form id="contactForm" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">First Name</label>
                <input type="text" name="firstName" required
                       class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-discord-500 transition-colors"
                       placeholder="John">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">Last Name</label>
                <input type="text" name="lastName" required
                       class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-discord-500 transition-colors"
                       placeholder="Doe">
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Email Address</label>
              <input type="email" name="email" required
                     class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-discord-500 transition-colors"
                     placeholder="john@example.com">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Subject</label>
              <select name="subject" required
                      class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-discord-500 transition-colors">
                <option value="">Select a topic</option>
                <option value="general">General Inquiry</option>
                <option value="technical">Technical Support</option>
                <option value="billing">Billing Question</option>
                <option value="feature">Feature Request</option>
                <option value="bug">Bug Report</option>
                <option value="partnership">Partnership</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Message</label>
              <textarea name="message" required rows="6"
                        class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-discord-500 transition-colors resize-none"
                        placeholder="Tell us how we can help you..."></textarea>
            </div>
            
            <button type="submit"
                    class="w-full bg-discord-500 hover:bg-discord-600 text-white px-6 py-4 rounded-lg font-semibold transition-colors flex items-center justify-center space-x-2">
              <i class="fas fa-paper-plane"></i>
              <span>Send Message</span>
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Contact Methods -->
          <div class="bg-gray-800 p-8 rounded-2xl border border-gray-700">
            <h2 class="text-2xl font-bold text-white mb-6">Contact Information</h2>
            
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-discord-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <i class="fas fa-envelope text-white"></i>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-white">Email</h3>
                  <p class="text-gray-300">support@mavcode.xyz</p>
                  <p class="text-sm text-gray-400">Response within 24 hours</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-purple-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <i class="fab fa-discord text-white"></i>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-white">Discord</h3>
                  <p class="text-gray-300">discord.gg/mavcode</p>
                  <p class="text-sm text-gray-400">Real-time support 24/7</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <i class="fab fa-twitter text-white"></i>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-white">Twitter</h3>
                  <p class="text-gray-300">@mavcode_dev</p>
                  <p class="text-sm text-gray-400">Updates and announcements</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Business Hours -->
          <div class="bg-gray-800 p-8 rounded-2xl border border-gray-700">
            <h2 class="text-2xl font-bold text-white mb-6">Business Hours</h2>
            
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-300">Monday - Friday</span>
                <span class="text-white font-medium">9:00 AM - 6:00 PM EST</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-300">Saturday</span>
                <span class="text-white font-medium">10:00 AM - 4:00 PM EST</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-300">Sunday</span>
                <span class="text-gray-400">Closed</span>
              </div>
            </div>
            
            <div class="mt-6 p-4 bg-gray-700 rounded-lg border border-gray-600">
              <p class="text-sm text-gray-300">
                <i class="fas fa-info-circle text-blue-400 mr-2"></i>
                Discord support is available 24/7 through our community and automated systems.
              </p>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="bg-gray-800 p-8 rounded-2xl border border-gray-700">
            <h2 class="text-2xl font-bold text-white mb-6">Quick Links</h2>
            
            <div class="grid grid-cols-2 gap-4">
              <a href="/support" class="text-discord-400 hover:text-discord-300 transition-colors flex items-center space-x-2">
                <i class="fas fa-life-ring"></i>
                <span>Support Center</span>
              </a>
              <a href="/dashboard/documentation" class="text-discord-400 hover:text-discord-300 transition-colors flex items-center space-x-2">
                <i class="fas fa-book"></i>
                <span>Documentation</span>
              </a>
              <a href="/status" class="text-discord-400 hover:text-discord-300 transition-colors flex items-center space-x-2">
                <i class="fas fa-heartbeat"></i>
                <span>System Status</span>
              </a>
              <a href="/dashboard/plans" class="text-discord-400 hover:text-discord-300 transition-colors flex items-center space-x-2">
                <i class="fas fa-tag"></i>
                <span>Pricing</span>
              </a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

</div>

<script>
document.getElementById('contactForm').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const formData = new FormData(e.target);
  const data = {};
  
  for (let [key, value] of formData.entries()) {
    data[key] = value;
  }
  
  // Simulate form submission
  const submitBtn = e.target.querySelector('button[type="submit"]');
  const originalText = submitBtn.innerHTML;
  
  submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Sending...';
  submitBtn.disabled = true;
  
  setTimeout(() => {
    alert('Thank you for your message! We\'ll get back to you within 24 hours.');
    e.target.reset();
    submitBtn.innerHTML = originalText;
    submitBtn.disabled = false;
  }, 2000);
});
</script>

