<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        premium: {
                            50: '#fefce8',
                            100: '#fef9c3',
                            200: '#fef08a',
                            300: '#fde047',
                            400: '#facc15',
                            500: '#eab308',
                            600: '#ca8a04',
                            700: '#a16207',
                            800: '#854d0e',
                            900: '#713f12'
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-900 text-white min-h-screen flex items-center justify-center">
    <div class="relative">
        <!-- Background Pattern -->
        <div class="absolute inset-0 bg-gradient-to-br from-premium-900/20 via-transparent to-gray-900/20 rounded-2xl"></div>
        
        <!-- Login Container -->
        <div class="relative bg-gray-800 border border-gray-700 rounded-2xl shadow-2xl p-8 w-full max-w-md">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="flex items-center justify-center mb-4">
                    <i class="fas fa-shield-alt text-premium-400 text-4xl mr-3"></i>
                    <h1 class="text-3xl font-bold text-white">Admin 2FA</h1>
                </div>
                <p class="text-gray-400">
                    <% if (isFirstTime) { %>
                        Welcome! Enter the verification code sent to<br>
                        <strong class="text-premium-400"><%= email %></strong><br>
                        <span class="text-sm text-green-400">After verification, you'll set up your admin password.</span>
                    <% } else { %>
                        Enter the verification code sent to<br>
                        <strong class="text-premium-400"><%= email %></strong>
                    <% } %>
                </p>
            </div>

            <!-- Error Message -->
            <% if (error) { %>
                <div class="bg-red-900/30 border border-red-500/30 rounded-lg p-4 mb-6">
                    <div class="flex items-center text-red-400">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        <span class="font-medium">
                            <% if (error === 'code_expired') { %>
                                Code has expired. Please request a new one.
                            <% } else if (error === 'invalid_code') { %>
                                Invalid verification code. Please try again.
                            <% } else { %>
                                Verification failed. Please try again.
                            <% } %>
                        </span>
                    </div>
                </div>
            <% } %>

            <!-- Verification Form -->
            <form method="POST" action="/admin/verify" class="space-y-6">
                <input type="hidden" name="email" value="<%= email %>">
                
                <!-- Verification Code Field -->
                <div>
                    <label for="code" class="block text-sm font-medium text-gray-300 mb-2">
                        <i class="fas fa-key mr-2"></i>6-Digit Code
                    </label>
                    <input 
                        type="text" 
                        id="code" 
                        name="code" 
                        required
                        maxlength="6"
                        pattern="[0-9]{6}"
                        class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-premium-500 focus:border-transparent text-white placeholder-gray-400 text-center text-2xl font-bold letter-spacing-wider"
                        placeholder="000000"
                        autofocus
                    >
                </div>

                <div class="bg-yellow-900/30 border border-yellow-500/30 rounded-lg p-4">
                    <div class="flex items-center text-yellow-400 mb-2">
                        <i class="fas fa-clock mr-2"></i>
                        <span class="font-medium">Code expires in 10 minutes</span>
                    </div>
                    <p class="text-sm text-yellow-300">
                        Check your Gmail inbox and spam folder for the verification code.
                    </p>
                </div>

                <!-- Verify Button -->
                <button 
                    type="submit"
                    class="w-full bg-premium-500 hover:bg-premium-600 text-black px-6 py-3 rounded-lg font-bold transition-colors duration-200 flex items-center justify-center space-x-2"
                >
                    <i class="fas fa-check-circle"></i>
                    <span>Verify & Login</span>
                </button>
            </form>

            <!-- Back Link -->
            <div class="mt-6 text-center">
                <a href="/admin/login" class="text-premium-400 hover:text-premium-300 transition-colors duration-200 text-sm">
                    <i class="fas fa-arrow-left mr-1"></i>
                    Back to Login
                </a>
            </div>
        </div>
    </div>

    <script>
        // Auto-format code input
        document.getElementById('code').addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^0-9]/g, '');
            if (value.length > 6) value = value.slice(0, 6);
            e.target.value = value;
        });

        // Auto-submit when 6 digits entered
        document.getElementById('code').addEventListener('input', function(e) {
            if (e.target.value.length === 6) {
                // Small delay for user to see the complete code
                setTimeout(() => {
                    document.querySelector('form').submit();
                }, 500);
            }
        });
    </script>
</body>
</html>
