<%- include('./layouts/header', { title: title }) %>

<div class="min-h-screen bg-gray-900">
  <!-- Navigation -->
  <nav class="bg-gray-800 shadow-lg border-b border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16 items-center">
        <div class="flex items-center space-x-3">
          <i class="fas fa-music text-discord-500 text-2xl"></i>
          <span class="text-xl font-bold">MAVCODE Rhythm</span>
          <span class="px-2 py-1 bg-premium-500 text-black text-xs font-semibold rounded">MUSIC BOT</span>
        </div>
        
        <div class="hidden md:flex items-center space-x-6">
          <a href="/" class="text-gray-300 hover:text-white transition-colors">
            <i class="fas fa-home mr-2"></i>Home
          </a>
          <a href="/dashboard/plans" class="text-gray-300 hover:text-white transition-colors">
            <i class="fas fa-tag mr-2"></i>Plans
          </a>
          <a href="/dashboard/documentation" class="text-gray-300 hover:text-white transition-colors">
            <i class="fas fa-book mr-2"></i>Documentation
          </a>
          <a href="/features" class="text-gray-300 hover:text-white transition-colors">
            <i class="fas fa-star mr-2"></i>Features
          </a>
        </div>
        
        <div class="flex items-center space-x-4">
          <a href="/auth/discord" class="bg-discord-500 hover:bg-discord-600 text-white px-6 py-2 rounded-lg flex items-center space-x-2 transition-colors">
            <i class="fab fa-discord"></i>
            <span>Login with Discord</span>
          </a>
          <a href="/admin/login" class="bg-yellow-400 hover:bg-yellow-500 text-black px-6 py-2 rounded-lg font-bold border-2 border-yellow-600 flex items-center space-x-2 transition-colors">
            <i class="fas fa-user-shield"></i>
            <span>Admin Login</span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-800 to-gray-900 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
        System <span class="text-green-400">Status</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Real-time status of MAVCODE Rhythm services and infrastructure
      </p>
      
      <!-- Overall Status -->
      <div class="mt-8">
        <div class="inline-flex items-center space-x-3 bg-green-500 text-white px-6 py-3 rounded-full font-semibold">
          <div class="w-3 h-3 bg-white rounded-full animate-pulse"></div>
          <span>All Systems Operational</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Status -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-6">
        
        <!-- Bot Hosting Service -->
        <div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="w-4 h-4 bg-green-500 rounded-full animate-pulse"></div>
              <div>
                <h3 class="text-xl font-semibold text-white">Bot Hosting Service</h3>
                <p class="text-gray-400">Core bot hosting infrastructure</p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-green-400 font-semibold">Operational</div>
              <div class="text-sm text-gray-400">Uptime: 99.98%</div>
            </div>
          </div>
        </div>

        <!-- Web Dashboard -->
        <div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="w-4 h-4 bg-green-500 rounded-full animate-pulse"></div>
              <div>
                <h3 class="text-xl font-semibold text-white">Web Dashboard</h3>
                <p class="text-gray-400">User management interface</p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-green-400 font-semibold">Operational</div>
              <div class="text-sm text-gray-400">Response: 245ms</div>
            </div>
          </div>
        </div>

        <!-- Music Streaming -->
        <div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="w-4 h-4 bg-green-500 rounded-full animate-pulse"></div>
              <div>
                <h3 class="text-xl font-semibold text-white">Music Streaming</h3>
                <p class="text-gray-400">Audio playback and streaming</p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-green-400 font-semibold">Operational</div>
              <div class="text-sm text-gray-400">Quality: 320kbps</div>
            </div>
          </div>
        </div>

        <!-- Discord API -->
        <div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="w-4 h-4 bg-green-500 rounded-full animate-pulse"></div>
              <div>
                <h3 class="text-xl font-semibold text-white">Discord API</h3>
                <p class="text-gray-400">Discord integration services</p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-green-400 font-semibold">Operational</div>
              <div class="text-sm text-gray-400">Latency: 120ms</div>
            </div>
          </div>
        </div>

        <!-- Database -->
        <div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="w-4 h-4 bg-green-500 rounded-full animate-pulse"></div>
              <div>
                <h3 class="text-xl font-semibold text-white">Database</h3>
                <p class="text-gray-400">User data and configurations</p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-green-400 font-semibold">Operational</div>
              <div class="text-sm text-gray-400">Query: 45ms</div>
            </div>
          </div>
        </div>

        <!-- Authentication -->
        <div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="w-4 h-4 bg-green-500 rounded-full animate-pulse"></div>
              <div>
                <h3 class="text-xl font-semibold text-white">Authentication</h3>
                <p class="text-gray-400">Login and security services</p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-green-400 font-semibold">Operational</div>
              <div class="text-sm text-gray-400">SSL: Active</div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="bg-gray-800 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-white text-center mb-12">Performance Metrics</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Uptime -->
        <div class="bg-gray-700 p-6 rounded-xl text-center border border-gray-600">
          <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-check text-white text-xl"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">99.98%</h3>
          <p class="text-gray-300">Uptime</p>
          <p class="text-xs text-gray-400 mt-2">Last 30 days</p>
        </div>

        <!-- Response Time -->
        <div class="bg-gray-700 p-6 rounded-xl text-center border border-gray-600">
          <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-clock text-white text-xl"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">245ms</h3>
          <p class="text-gray-300">Response Time</p>
          <p class="text-xs text-gray-400 mt-2">Average</p>
        </div>

        <!-- Active Bots -->
        <div class="bg-gray-700 p-6 rounded-xl text-center border border-gray-600">
          <div class="w-12 h-12 bg-purple-500 rounded-xl flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-robot text-white text-xl"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">1,247</h3>
          <p class="text-gray-300">Active Bots</p>
          <p class="text-xs text-gray-400 mt-2">Currently online</p>
        </div>

        <!-- Servers -->
        <div class="bg-gray-700 p-6 rounded-xl text-center border border-gray-600">
          <div class="w-12 h-12 bg-yellow-500 rounded-xl flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-server text-white text-xl"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">12,534</h3>
          <p class="text-gray-300">Discord Servers</p>
          <p class="text-xs text-gray-400 mt-2">Using our bots</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Incidents -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-white text-center mb-12">Recent Incidents</h2>
      
      <!-- No Incidents -->
      <div class="bg-gray-800 p-8 rounded-xl border border-gray-700 text-center">
        <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-check text-white text-2xl"></i>
        </div>
        <h3 class="text-xl font-semibold text-white mb-2">No Recent Incidents</h3>
        <p class="text-gray-400">All systems have been running smoothly for the past 30 days.</p>
        <p class="text-sm text-gray-500 mt-2">Last checked: <span id="lastChecked"></span></p>
      </div>
    </div>
  </section>

  <!-- Subscribe to Updates -->
  <section class="bg-gray-800 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Stay Updated</h2>
      <p class="text-xl text-gray-300 mb-8">
        Get notified about status updates and planned maintenance
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto">
        <input type="email" placeholder="Enter your email" 
               class="flex-1 bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-discord-500 transition-colors">
        <button class="bg-discord-500 hover:bg-discord-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors whitespace-nowrap">
          Subscribe
        </button>
      </div>
    </div>
  </section>

</div>

<script>
// Update last checked time
document.getElementById('lastChecked').textContent = new Date().toLocaleString();

// Auto refresh every 30 seconds
setInterval(() => {
  document.getElementById('lastChecked').textContent = new Date().toLocaleString();
}, 30000);
</script>

