<%- include('../layouts/main') %>

<style>
/* Animated Colorful Background */
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap');

.animated-bg {
    background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #ffeaa7, #fd79a8, #a8e6cf, #ff8b94);
    background-size: 1000% 1000%;
    animation: gradientShift 8s ease infinite;
    min-height: 100vh;
    position: relative;
}

@keyframes gradientShift {
    0% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
    100% {
        background-position: 0% 50%;
    }
}

/* Glass morphism effect */
.glass-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.animated-btn {
    background: linear-gradient(135deg, #ee7752 0%, #e73c7e 50%, #23a6d5 100%);
    background-size: 200% 200%;
    animation: gradientShift 4s ease infinite;
    border: none;
    color: white;
    padding: 12px 24px;
    border-radius: 10px;
    transition: all 0.3s ease;
    text-decoration: none;
}

.animated-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(238, 119, 82, 0.4);
    color: white;
    text-decoration: none;
}

body {
    font-family: 'Poppins', sans-serif;
}

.premium-text {
    background: linear-gradient(135deg, #ee7752 0%, #e73c7e 50%, #23a6d5 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}
</style>

<div class="animated-bg">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-4xl font-bold text-white mb-4">Complete Your Purchase</h1>
                <p class="text-white/80 text-lg">You're just one step away from your premium music bot!</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Plan Summary -->
                <div class="glass-card rounded-3xl p-6">
                    <h2 class="text-2xl font-bold text-white mb-4">Order Summary</h2>
                    <% if (selectedPlan && plans[selectedPlan]) { %>
                        <div class="space-y-4">
                            <div class="flex justify-between">
                                <span class="text-white/80">Plan:</span>
                                <span class="text-white font-semibold"><%= plans[selectedPlan].name %></span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-white/80">Price:</span>
                                <span class="text-white font-semibold premium-text"><%= plans[selectedPlan].price %></span>
                            </div>
                            <hr class="border-white/20">
                            <div class="space-y-2">
                                <p class="text-white font-semibold">Includes:</p>
                                <% plans[selectedPlan].features.forEach(feature => { %>
                                    <div class="flex items-center space-x-2">
                                        <i class="fas fa-check text-green-400"></i>
                                        <span class="text-white/80"><%= feature %></span>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% } else { %>
                        <p class="text-white/80">No plan selected</p>
                    <% } %>
                </div>

                <!-- Payment Form -->
                <div class="lg:col-span-2 glass-card rounded-3xl p-6">
                    <h2 class="text-2xl font-bold text-white mb-6">Payment Details</h2>
                    
                    <div class="bg-yellow-500/20 border border-yellow-500/50 rounded-lg p-4 mb-6">
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-info-circle text-yellow-400 text-xl"></i>
                            <div>
                                <h3 class="font-semibold text-yellow-300">Demo Mode</h3>
                                <p class="text-yellow-200 text-sm">Payment processing is currently in demo mode. No actual charges will be made.</p>
                            </div>
                        </div>
                    </div>

                    <form class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-white/80 font-semibold mb-2">First Name</label>
                                <input type="text" class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:border-white/40 focus:outline-none" placeholder="John">
                            </div>
                            <div>
                                <label class="block text-white/80 font-semibold mb-2">Last Name</label>
                                <input type="text" class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:border-white/40 focus:outline-none" placeholder="Doe">
                            </div>
                        </div>

                        <div>
                            <label class="block text-white/80 font-semibold mb-2">Email</label>
                            <input type="email" class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:border-white/40 focus:outline-none" placeholder="john@example.com" value="<%= user.email || '' %>" readonly>
                        </div>

                        <div>
                            <label class="block text-white/80 font-semibold mb-2">Card Number</label>
                            <input type="text" class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:border-white/40 focus:outline-none" placeholder="4242 4242 4242 4242">
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-white/80 font-semibold mb-2">Expiry Date</label>
                                <input type="text" class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:border-white/40 focus:outline-none" placeholder="MM/YY">
                            </div>
                            <div>
                                <label class="block text-white/80 font-semibold mb-2">CVC</label>
                                <input type="text" class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:border-white/40 focus:outline-none" placeholder="123">
                            </div>
                        </div>

                        <div class="flex items-center space-x-3">
                            <input type="checkbox" class="rounded border-white/20 bg-white/10 text-blue-600" required>
                            <label class="text-white/80 text-sm">I agree to the <a href="#" class="text-blue-400 hover:text-blue-300">Terms of Service</a> and <a href="#" class="text-blue-400 hover:text-blue-300">Privacy Policy</a></label>
                        </div>

                        <div class="flex space-x-4">
                            <button type="button" onclick="processPayment()" class="animated-btn flex-1 py-3 font-semibold">
                                <i class="fas fa-credit-card mr-2"></i>
                                Complete Purchase
                            </button>
                            <a href="/dashboard/plans" class="flex-1 bg-gray-600 hover:bg-gray-700 text-white py-3 px-4 rounded-lg font-semibold text-center transition-colors">
                                <i class="fas fa-arrow-left mr-2"></i>
                                Back to Plans
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function processPayment() {
    // Demo payment processing
    const button = event.target;
    const originalContent = button.innerHTML;
    
    button.disabled = true;
    button.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Processing...';
    
    setTimeout(() => {
        alert('Demo payment successful! In production, this would process your payment and activate your plan.');
        window.location.href = '/dashboard';
    }, 2000);
}
</script>

