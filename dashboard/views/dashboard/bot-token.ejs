<%- include('../layouts/header', { title: title || 'Bot Token Setup' }) %>

<div class="min-h-screen bg-gradient-to-br from-blue-500 to-electric-blue py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold text-white mb-8 fadeIn">Bot Token Setup</h1>

        <!-- Add bot token setup content here -->
        <div class="bg-blue-800/50 backdrop-blur-sm border border-blue-700 rounded-lg p-6 mb-8 transition-all duration-300 hover:scale-105">
            <h2 class="text-2xl font-semibold text-white mb-4">Configure Your Bot Token</h2>
            <p class="text-gray-300 mb-4">Enter your bot's token below to connect it to the hosting platform.</p>
            
            <form action="/bot/token" method="POST" class="space-y-4">
                <div>
                    <label for="bot_token" class="block text-sm text-white">Bot Token</label>
                    <input type="text" name="bot_token" id="bot_token" class="mt-1 p-2 w-full rounded-lg bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-electric-blue transition-all" placeholder="Enter your bot token here" required />
                </div>

                <div>
                    <button type="submit" class="w-full bg-electric-blue hover:bg-blue-700 text-white px-6 py-3 rounded-lg text-lg font-semibold transition-all transform hover:scale-105">
                        Save Token
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>
