<%- include('layouts/header', { title: title || 'Error' }) %>

<div class="min-h-screen bg-gray-900 flex items-center justify-center px-4">
    <div class="max-w-md w-full bg-gray-800 rounded-lg shadow-lg p-8 text-center">
        <div class="mb-6">
            <div class="mx-auto w-16 h-16 bg-red-500 rounded-full flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
            </div>
            <h1 class="text-2xl font-bold text-white mb-2">Oops! Something went wrong</h1>
            <p class="text-gray-300 mb-6">
                <%= message || 'An unexpected error occurred. Please try again later.' %>
            </p>
        </div>

        <div class="space-y-3">
            <a href="/" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors inline-block">
                Go Home
            </a>
            <a href="javascript:history.back()" class="w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors inline-block">
                Go Back
            </a>
        </div>

        <% if (process.env.NODE_ENV === 'development' && error) { %>
        <div class="mt-8 p-4 bg-gray-700 rounded-lg text-left">
            <h3 class="text-sm font-medium text-red-400 mb-2">Debug Information:</h3>
            <pre class="text-xs text-gray-300 overflow-auto max-h-32">
<%= error.stack || error.message || JSON.stringify(error, null, 2) %>
            </pre>
        </div>
        <% } %>
    </div>
</div>

<%- include('layouts/footer') %>
